@page
@model ServiceFinder.Pages.Admin.ServiceCategories.IndexModel

@{
    ViewData["Title"] = "Service Categories";
    ViewData["PageMode"] = "List";

}
<h1>@ViewData["Title"]</h1>

<partial name="Partials/Buttons/_AddNewPartial" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCategories[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCategories[0].Industry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceCategories[0].IsNavItem)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ServiceCategories) {
            <tr class ="align-middle">
            <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">@item.Name</a>
                </td>
            <td>
                    @if(item.Industry is not null) @Html.DisplayFor(modelItem => item.Industry.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsNavItem)
            </td>
            <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="bi bi-pencil-square btn btn-sm btn-warning"></a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="bi bi-trash btn btn-sm btn-danger"></a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var paginationModel = new Utility.ListPages { PageCount = Model.PageCount, Url = "Index" };
}

<partial name="_PaginationPartial" model="paginationModel" />