@addTagHelper *, Vereyon.Web.FlashMessage

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Discover Your Trusted Local Service Providers: Service Finder is your go-to destination for connecting with a wide range of service providers in beautiful British Columbia, Canada.">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="Service Finder, Find Local Services">
    <meta property="og:title" content="@ViewData["Title"] - Service Finder : Find Local Services" />
    <meta property="og:description" content="Discover Your Trusted Local Service Providers: Service Finder is your go-to destination for connecting with a wide range of service providers in beautiful British Columbia, Canada." />
    <title>@ViewData["Title"] - Service Finder : Find Local Services</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ServiceFinder.styles.css" asp-append-version="true" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet">
    <link href="~/lib/select2-bootstrap-5-theme/select2-bootstrap-5-theme.min.css" rel="stylesheet">
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-primary">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">Service Finder</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="bi bi-building nav-link text-white" href="/Services/Index"> Browse Services</a>
                        </li>
                        <partial name="Partials/Menus/_ServiceCategories" />
                        <partial name="Partials/Menus/_ServiceCities" />
                    </ul>
                    <partial name="Partials/Menus/_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <partial name="_CookieConsentPartial.cshtml" />

        <flash dismissable="false" />

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Service Finder - <a asp-area="" asp-page="/Privacy">Privacy</a> - <a asp-area="" asp-page="/ContactUs">Contact Us</a> - <a asp-area="" asp-page="/AboutUs">About Us</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>