@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
        <hr />
        <p class="h3">Don't have an account?</p>
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="h3 text-primary">Sign up for free</a>
    </div>
    <div class="col-md-6">
        <div class="text-center">
            <img src="/images/system/welcome-come-in.jpg" class="rounded img-fluid mx-auto mb-4" alt="Welcome, Come in" style="width: 50%">
        </div>
        <section>
            <h2>Unlock the Full Experience</h2>
            <p class="fw-semibold lead">With a registered account on Service Finder, you gain access to a world of convenience and personalized service:</p>
            <ul>
                <li><strong>Find Local Services:</strong> Discover a wide range of local service providers, from skilled tradespeople to creative professionals.</li>
                <li><strong>Easy Booking:</strong> Book services directly with just a few clicks, saving you time and hassle.</li>
                <li><strong>Direct Message:</strong> Communicate with service providers for inquiries or specific details.</li>
                <li><strong>Leave Reviews:</strong> Share your experiences and read reviews from others to make informed choices.</li>
                <li><strong>Data Control:</strong> Enjoy control over your data, including the ability to delete your account at any time.</li>
            </ul>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
